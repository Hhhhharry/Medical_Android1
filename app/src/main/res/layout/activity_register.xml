<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="middle"
    tools:context="cn.wydewy.medicalapp.Register_Activity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/green_dark"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="北京邮电大学校医院"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="12dp"
            android:text="为了保障你的账户安全，请填写以下信息进行登陆" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:textSize="15dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/account"
            android:background="@drawable/shape_label"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入以注册的身份证"
            android:textSize="15dp"
            android:id="@+id/idcard"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/shape_label"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入以注册的手机号码"
            android:textSize="15dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/phone_number"
            android:background="@drawable/shape_label"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textSize="15dp"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/shape_label"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:background="@drawable/shape_button_darkgreen"
            android:paddingLeft="@dimen/activity_horizontal_margin80"
            android:paddingRight="@dimen/activity_horizontal_margin80"
            android:onClick="LoginOnClick"
            android:textColor="@color/white"
            android:text="登录"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_vertical_margin"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login2"
            android:background="@drawable/shape_button_darkgreen"
            android:paddingLeft="@dimen/activity_horizontal_margin80"
            android:paddingRight="@dimen/activity_horizontal_margin80"
            android:onClick="LoginOnClick1"
            android:textColor="@color/white"
            android:text="注册"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="16dp"
        android:text="用户登录"/>

</LinearLayout>
