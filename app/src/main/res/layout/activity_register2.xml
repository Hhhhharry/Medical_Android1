<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:divider="@drawable/divider_horizontal"
    android:showDividers="middle"
    tools:context="cn.wydewy.medicalapp.Register_Activity">
    <include layout="@layout/top_back_first"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="12dp"
            android:text="为了保障你的账户安全，请填写以下信息进行注册" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:textSize="15dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/account1"
            android:background="@drawable/shape_label_gray_two_radius"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入以注册的身份证"
            android:textSize="15dp"
            android:id="@+id/idcard1"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/shape_label_gray_two_radius"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入以注册的手机号码"
            android:textSize="15dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:id="@+id/phone_number1"
            android:background="@drawable/shape_label_gray_two_radius"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"
            android:textSize="15dp"
            android:id="@+id/password1"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@drawable/shape_label_gray_two_radius"
            android:selectAllOnFocus="false" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_darkgreen"
            android:paddingLeft="@dimen/activity_horizontal_margin80"
            android:paddingRight="@dimen/activity_horizontal_margin80"
            android:textColor="@color/white"
            android:id="@+id/register2"
            android:onClick="LoginOnClick"
            android:text="确认注册"/>
            </LinearLayout>

    </LinearLayout>


</LinearLayout>
